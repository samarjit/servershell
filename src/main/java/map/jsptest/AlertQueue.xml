      <sqlinsert id="frmnrmladd" outstack="inst">insert into ALERT_QUEUE( ALERT_Q_ID, NAME, EMAIL) values ( #inp.form1[0].alertqid, #inp.form1[0].name, #inp.form1[0].email)</sqlinsert>
