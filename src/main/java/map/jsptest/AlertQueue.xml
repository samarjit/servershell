    <stylesheets>
      <styleinclude></styleinclude>
    </stylesheets>
    <sessionvars>sessionvars</sessionvars>
    <crud>
	   <jsonrpc outstack="formonload" id="onloadqry1">SELECT ALERT_Q_ID "alertqid",NAME "name",EMAIL "email" FROM ALERT_QUEUE 
