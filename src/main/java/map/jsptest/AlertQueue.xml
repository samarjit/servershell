      <sqlupdate id="frmnrmledit" outstack="updt">update ALERT_QUEUE set  NAME = #inp.form1[0].name, EMAIL = #inp.form1[0].email WHERE ALERT_Q_ID=#inp.form1[0].alertqid</sqlupdate>
