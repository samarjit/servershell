<!--GRID INSERTS (check out which alias is required-->
      <sqlinsert id="frmgridadd" outstack="inst">insert into ALERT_QUEUE( ALERT_Q_ID, NAME, EMAIL) values ( #inp.form1[0].ALERT_Q_ID, #inp.form1[0].NAME, #inp.form1[0].EMAIL )</sqlinsert>
      <sqlinsert id="gridadd" outstack="inst">insert into ALERT_QUEUE( ALERT_Q_ID, NAME, EMAIL) values ( #inp.form1[0].ALERT_Q_ID, #inp.form1[0].NAME, #inp.form1[0].EMAIL )</sqlinsert>
      <sqldelete id="frmgriddel" outstack="delt">delete from ALERT_QUEUE WHERE ALERT_Q_ID = #inp.form1[0].ALERT_Q_ID|STRING</sqldelete>
      <sqldelete id="griddel" outstack="delt">delete from ALERT_QUEUE WHERE ALERT_Q_ID = #inp.form1[0].id|STRING</sqldelete>
      <sqlupdate id="frmgridedit" outstack="updt">update ALERT_QUEUE set  NAME = #inp.form1[0].NAME, EMAIL = #inp.form1[0].EMAIL WHERE ALERT_Q_ID=#inp.form1[0].ALERT_Q_ID</sqlupdate>
      <sqlupdate id="gridedit" outstack="updt">update ALERT_QUEUE set  NAME = #inp.form1[0].NAME, EMAIL = #inp.form1[0].EMAIL WHERE ALERT_Q_ID=#inp.form1[0].id|STRING</sqlupdate>
