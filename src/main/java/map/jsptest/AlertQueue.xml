          	<validationfld dbcolsize="20" name="name" column="NAME" mandatory="yes" forid="name" dbdatatype="STRING" />
          	<validationfld dbcolsize="20" name="email" column="EMAIL" mandatory="yes" forid="email" dbdatatype="STRING" />

          	<label replace="modify" key="alertqid" value="Alert Q Id" forname="alertqid"/>
          	<label replace="modify" key="name" value="Name" forname="name"/>
          	<label replace="modify" key="email" value="Email" forname="email"/>

          </field>
       </fields>
      <button forid="" id="" onclick="" replace="modify" type="">button</button>
